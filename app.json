{
  "expo": {
    "name": "antwise-app",
    "slug": "antwise-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/splash-icon.png", // using splash icon for app icon
    "scheme": "antwiseapp", // Custom URL scheme for deep linking
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/splash-icon.png", // using splash icon for adaptive icon
        "backgroundColor": "#7C00FE" // purple background
      },
      "package": "com.theantwiseapp.antwiseapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/splash-icon.png" // using splash icon for favicon
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png", // splash icon for splash screen
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#7C00FE" // purple background
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "owner": "your-expo-username",
    "experiments": {
      "typedRoutes": true
    }
  }
}
